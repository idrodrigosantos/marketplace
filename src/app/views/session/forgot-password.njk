{% extends "layout.njk" %}

{% import "parts/card.njk" as card %}

{% block content %}
    {% call card.render('Esqueceu a senha', 'password container') %}
    <form method="POST" action="/users/forgot-password">
        <div class="fields">
            <div class="item">
                <div>E-mail</div>
                <div class="input">
                    <input
                        type="email"
                        name="email"
                        placeholder="Digite o e-mail cadastrado"
                        value="{{ user.email }}" onblur="Validate.apply(this, 'isEmail')"
                    >
                </div>
            </div>
        </div>

        <button type="submit" class="button">Recuperar senha</button>
    </form>
    {% endcall %}
{% endblock %}